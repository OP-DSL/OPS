    CHARACTER(KIND=C_CHAR), POINTER, DIMENSION(:) :: userSubroutine
    TYPE(ops_arg), POINTER, DIMENSION(:) :: opsArgArray

{% for arg in lh.args %}
    TYPE(ops_arg) :: opsArg{{arg.id+1}}
