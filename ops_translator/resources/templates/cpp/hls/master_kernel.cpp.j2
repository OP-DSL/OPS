{% extends "cpp/master_kernel.cpp.j2" %}

{% block ops_headers %}
#pragma once

#include <math.h>
#include <string.h>
#include <stdlib.h>
#include <stdio.h>

#include <ops_hls_rt_support.h>
{% endblock %}

{% block const_decls %}
    {% for const in app.consts() %}
        {% if not const.dim.isdigit() or (const.dim.isdigit() and const.dim|int > 1) %}
extern {{const.typ}} *{{const.ptr}};
        {% else %}
extern {{const.typ}} {{const.ptr}};
        {% endif %}
    {% endfor %}
{% endblock %}

{% block config %}
typedef {{target_config["stencil_type"]}} stencil_type;
constexpr unsigned short vector_factor = {{target_config['vector_factor']}};
constexpr unsigned short mem_vector_factor = {{target_config['mem_vector_factor']}};
constexpr unsigned int iter_par_factor = {{target_config["iter_par_factor"]}};
{% endblock%}

{% block header_includes %}
{{super()}}
{% endblock %}