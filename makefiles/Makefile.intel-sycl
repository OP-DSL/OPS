CC    := dpcpp
CXX   := dpcpp
ifdef DEBUG
	CCFLAGS   := -O0 -std=c99 -fPIC -DUNIX -Wall -g #-ffloat-store
	CXXFLAGS   := -O0 -fPIC -DUNIX -Wall -g -std=c++17 -DSYCL_COPY -DSYCL_USM #-DSYCL_COPY #-ffloat-store
else
	CCFLAGS   := -O3  -std=c99 -fPIC -DUNIX -Wall #-ffloat-store
	CXXFLAGS  := -O3 -g  -fPIC -DUNIX -Wall -std=c++17 -qopenmp
endif
ifdef IEEE
	CCFLAGS += -fp-model=strict 
	CXXFLAGS += -fp-model=strict 
endif
OMPFLAGS := -qopenmp
ifdef THREADED
	THREADING_FLAGS ?= -qopenmp
endif
ifdef PROFILE_ITT
	CXXFLAGS += -DPROFILE_ITT -I$(VTUNE_PROFILER_DIR)/include
	OPS_LINK += -L$(VTUNE_PROFILER_DIR)/lib64 -littnotify
endif
SYCLCXX = dpcpp
SYCL_FLAGS = -fsycl -fsycl-targets=spir64_x86_64 -Xs "-march=avx512"  #-I$(SYCL_INSTALL_PATH)/include #-fsycl-targets=spir64_x86_64-unknown-unknown-sycldevice #intel sycl 
