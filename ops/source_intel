#A rough example of environmental variables for compiling with Intel compilers
export OPS_COMPILER=intel
#export OPS_INSTALL_PATH=/home/mudalige/Cloverleaf/OPS_rebase/OPS/ops
export CUDA_INSTALL_PATH=/usr/local/cuda-6.0/
export OPENCL_INSTALL_PATH=/usr/local/cuda-6.0/
export MPI_INSTALL_PATH=/opt/intel/impi/4.1.3.048/intel64
#source /opt/intel/composer_xe_2013.1.117/bin/ifortvars.sh intel64
source /opt/intel/composer_xe_2015/bin/compilervars.sh intel64
source /opt/intel/impi/4.1.3.048/intel64/bin/mpivars.sh intel64
export INTEL_PATH=/opt/intel/composer_xe_2015
export MPICH_CXX=/opt/intel/bin/icpc
export MPICH_CC=/opt/intel/bin/icc
export MPICH_F90=/opt/intel/bin/ifort

